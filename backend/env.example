# Database configuration
POSTGRES_SERVER=db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=expense_tracker

# Application settings
SECRET_KEY=your_secret_key_for_jwt_tokens
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# Cors settings - comma separated list of origins
BACKEND_CORS_ORIGINS=http://localhost:8501,http://localhost:8000

# API settings
API_V1_STR=/api/v1

# Email settings (for user invitations)
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
EMAILS_FROM_EMAIL=info@expensetracker.com
EMAILS_FROM_NAME=Expense Tracker

# Logging configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
JSON_LOGS=true  # Set to false for human-readable logs in development
ENVIRONMENT=development  # development, test, production
